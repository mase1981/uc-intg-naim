{
  "driver_id": "uc_naim_driver",
  "version": "1.0.9",
  "min_core_api": "0.24.0",
  "name": {
    "en": "Naim Audio",
    "de": "Naim Audio"
  },
  "icon": "uc:music",
  "description": {
    "en": "Integration driver for Naim audio devices like Atom, Nova, Star, and Uniti series with comprehensive control of all inputs, volume, and playback functions. Supports multiple devices."
  },
  "port": 9090,
  "developer": {
    "name": "Meir Miyara",
    "email": "meir.miyara@gmail.com",
    "url": "https://github.com/mase1981"
  },
  "home_page": "https://github.com/mase1981/uc-intg-naim",
  "release_date": "2025-09-07",
  "setup_data_schema": {
    "title": { "en": "Naim Device Setup" },
    "description": { "en": "Configure your Naim audio devices. You can set up one or multiple devices." },
    "settings": [
      {
        "id": "device_count",
        "label": { "en": "Number of Devices" },
        "description": { "en": "How many Naim devices do you want to configure?" },
        "field": { 
          "number": { 
            "value": 1,
            "min": 1, 
            "max": 10 
          } 
        }
      },
      {
        "id": "host",
        "label": { "en": "Device IP Address (Single Device Only)" },
        "description": { "en": "For single device setup only. Enter your Naim device IP address (e.g., 192.168.1.100 or 192.168.1.100:15081). Leave empty if configuring multiple devices." },
        "field": { 
          "text": { 
            "value": "",
            "placeholder": "192.168.1.100 or 192.168.1.100:15081"
          } 
        }
      }
    ]
  }
}